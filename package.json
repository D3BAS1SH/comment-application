{
  "name": "comment-application",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "globals": "^16.0.0",
    "husky": "^9.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.14.0"
  },
  "lint-staged": {
    "apps/auth-service/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint -c apps/auth-service/eslint.config.mjs --fix"
    ],
    "apps/comment-service/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint -c apps/comment-service/eslint.config.mjs --fix"
    ],
    "apps/frontend/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint -c apps/frontend/eslint.config.mjs --fix"
    ],
    "apps/gateway-service/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint -c apps/gateway-service/eslint.config.mjs --fix"
    ],
    "apps/post-service/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint -c apps/post-service/eslint.config.mjs --fix"
    ],
    "*.{json,css,scss,md,mdx}": [
      "prettier --write"
    ]
  }
}
